{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "KCS mods",
    "description": "Tools KC modding",
    "icons": {
        "16": "assets/img/icon/icon_16.png",
        "48": "assets/img/icon/icon_48.png",
        "128": "assets/img/icon/icon_128.png"
    },
    "devtools_page": "pages/devtools/devtools.html",
    "browser_action": {
        "default_icon": "assets/img/icon/icon_500.png",
        "default_popup": "pages/popup/popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
        "scripts": [
            "library/modules/RequestInterceptor.js",
            "library/modules/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/kcs2/index.php?api_root=/kcsapi*"
            ],
            "js": [
                "library/modules/contentScript.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "permissions": [
        "debugger",
        "activeTab",
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "assets/img/*",
        "resources/*"
    ]
}